<div class="row">
<div class="col-md-6 col-md-offset-3">

<%= form_for @complaint do | f |%>

			<%=f.label :Resource%>		
		</td>
		<%@arr = []%>
		<%@resources.each do |res|%>
		<%@arr << [res.name,res.id]%>
		<% end %>
		<%= f.select :resource_id  do %>
			<%= @arr.each do | c | %>
			<%= content_tag(:option,c.first,value: c.last, class: 'form-control') %>
			<% end %>
			<% end %>
			<%=f.label :Comment%>
		<%=f.text_field :comment %>
	<%= f.submit 'Send complaint'%>
<% end %>
