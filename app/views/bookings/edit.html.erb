<h2>Edit Booking Request</h2>
<%= render "error" %>
<div class="row">
<div class="col-md-6 col-md-offset-3">

<%= form_for (@booking) do |f|%>
			Booking Subject
		<%= f.text_field :comment, placeholder: "Purpose of booking", class: 'form-control' %>
			Date
		<%= f.date_field :date_of_booking, class: 'form-control' %>
			Time Slot
		<%= f.select :slot do  %>
				<%  resource_time_slot(@booking.resource).each do |c| %>
					<%= content_tag(:option,c.first,value: c.last, class: 'form-control') %>
					<br>
				<%end %>
				
			<%end %>

		Resource
		<%= f.select :resource_id do  %>
					<% resource_array.each do |c| %>
						<%= content_tag(:option,c.first,value: c.last, class: 'form-control') %>
						<br>
					<%end %>
				<%end %>

		Priority

		<%= f.select :priority  do %>
			<% [['Low',0],['Medium',1],['High',2]].each do |c| %>
				<%= content_tag(:option,c.first,value: c.last, class: 'form-control') %>
			<%end %>
		<%end %>
		<%= f.submit "Book", class: "btn btn-primary" %>
	<%end %>
	</div>
	</div>