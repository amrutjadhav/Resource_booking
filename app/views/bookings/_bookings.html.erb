</div>
<hr>
<div class="row">
		<div class="col-md-12">
			<% @bookings.each do |booking|%>
				<div class="col-md-1">
					<%=booking.comment%>
				</div>
				<div class="col-md-2">
					<%=booking.employee.name%>
				</div>
				<div class="col-md-2">
					<%=booking.date_of_booking.to_formatted_s(:long)%>
				</div>
				<div class="col-md-2">
					<%=show_slot_time(booking.resource_id,booking.slot)%>
				</div>
				<div class="col-md-2">
					<%=booking.resource.name%>
				</div>
				<div class="col-md-1">
					<%=status_normalization1(booking.status)%>
				</div>
				
					<% if booking.employee_id == current_employee.id %>
						<div class="col-md-1">
							<%= link_to "Delete", [booking],method: "delete" %>
						</div>	
						<% if booking.status == 0 %>
							<div class="col-md-1">
							<%= link_to "Edit",[:edit, booking] %>
							</div>
						<% else %>
							<div class="col-md-1">
						.
							</div>
						<% end %>	
					<% else %>
						<div class="col-md-2">
						.
						</div>
					<% end %> <! end for checking employee id>
			<% end %>
		</div>
	</div>