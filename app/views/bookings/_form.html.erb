<%= render "error" %>
<div class="row"> 
<div class="col-md-6 col-md-offset-3">
	<%= form_for :booking ,url: bookings_path do |f|%>
		<%= f.select :resource_id ,{}, {:class => 'form-control'} do  %>
			<% resource_array.each do |c| %>
				<%= content_tag(:option,c.first,value: c.last) %>
				<br>
			<%end %>
		<%end %>
			Booking Subject
		<%= f.text_field :comment, placeholder: "Purpose of booking", class: 'form-control' %>
			Date
		<%= f.date_field :date_of_booking %>
			Time Slot
		<%= f.select :slot do  %>
			
			<div id="timeslot_options">
				
			</div>	
					
		<%end %>
		<%= f.submit "Book", class: "btn btn-primary" %>
	<%end %>
</div>
</div>