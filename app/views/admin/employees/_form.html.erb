
<%= render "error" %>


<div class="row">
<div class="col-md-6 col-md-offset-3">
	<%= form_for ['admin', @employee] do | f |%>
		<%=f.label :Name%>
		<%=f.text_field :name , class: "form-control", required: true%>
		<%=f.label :Email%>
  			<%=f.text_field :email , class: "form-control",required: true%>
		<br>
		<div class="col-md-6">
			<%=f.label :Age%>
			<%=f.text_field :age , class: "form-control",required: true%>	
		</div>
		<%list_roles%>
		<div class="col-md-6">
			<%=f.label :RoleId%>
			<%= f.select(:role_id) do %>
			  <% @roles.each do |c| %>
			    <%= content_tag(:option, c.first, value: c.last) %>
			  <% end %>
			<% end %>
		</div>
		<%list_employees%>		
		<%=f.label :Manager%>
		<%= f.select(:manager_id) do %>
			  <% @employees.each do |c| %>
			    <%= content_tag(:option, c.first, value: c.last) %>
			  <% end %>
		<% end %>
		<%=f.label "Date Of Joining" %>
		<%=f.date_field :date_of_joining , class: "form-control",required: true%>
		
		<%= f.submit 'Save Employee', class: "btn btn-primary btn-default"%>
<% end %>
