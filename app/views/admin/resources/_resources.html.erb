
<div class="row">
<hr>
<div class="col-md-12">
	<div class="col-md-2">
	<strong>Name</strong>
	</div>
	<div class="col-md-1">
	<strong>TimeSlot</strong>
	</div>
	<div class="col-md-1">
	<strong>Update</strong>
	</div>
	<div class="col-md-1">
	<strong>Delete</strong>
	</div>
	<div class="col-md-6">
	</div>
</div>
</div>
<% @resources.each do |resource|%>
<div class="row">
<hr>
<div class="col-md-12">
	<div class="col-md-2">
	<%= resource.name%></td>
	</div>
	<div class="col-md-1">

	<%= resource.time_slot.hour%>:<%= resource.time_slot.min%><%if resource.time_slot.min==0 %>0<%end%>
	</div>
	<div class="col-md-1">
	<%= button_to "Update", edit_admin_resource_path(resource), :method => "get",:class => "btn btn-info" %>
	</div>
	<div class="col-md-1">
	<%= button_to "Delete", admin_resource_path(resource),method:"delete",:class => "btn btn-danger", data: {confirm: "Are you sure?"}  %>
	</div>
	<div class="col-md-6">
	</div>
</div>
</div>
<% end %>
