 				<div class="input-group">
 					<input type="tel" name="phone1" id="go" class="form-control">
				</div>
				<%= f.hidden_field :phone, class: "form-control" , id: "hidden" %>
				<span id="valid-msg" class="hide" style="color: green">âœ“ Valid</span>
				<span id="error-msg" class="hide"  style="color: red">Invalid number</span>
				<br>
 			Start Time
 				<%= f.time_field :start_time , class: 'form-control', required: true%>
 			End Time
 				<%= f.time_field :end_time , class: 'form-control', required: true%>
