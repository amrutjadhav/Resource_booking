<div class="row">
 	<div class="col-md-6 col-md-offset-3" >
 		<%= form_for :company ,url: company_index_path do |f| %>
 			Name:
 				<%= f.text_field :name, class: 'form-control' , required: true, placeholder: "Enter name of company"%>
