<div class="row">
 	<div class="col-md-6 col-md-offset-3" >
 		<%= form_for(@company) do |f| %>
 			Name:
 			<%= f.text_field :name, class: 'form-control' , required: true, placeholder: "Enter name of company"%>
 			Phone:
 			<%= f.text_field :phone , class: 'form-control', required: true, placeholder: "Enter phone number."%>
 			Start Time
 			<%= f.time_field :start_time , class: 'form-control', required: true%>
 			End Time
 			<%= f.time_field :end_time , class: 'form-control', required: true%>
 			<div class="col-md-4" align="center">
 				<%= f.submit "Submit" %>
 			</div>
 		<% end %>	
 	</div>
 </div>